<h3>My Google Maps Demo</h3>
<div id="map"></div>
<script>
    function initMap() {
        var mickiewicza = { lat: 54.3827261, lng: 18.6239686 }; 
        let map = new google.maps.Map(document.getElementById('map'), {
            zoom: 13,
            center: mickiewicza
        });
        $.getJSON("/api/localizations/getAll", function(localizationInfos) {
            for (let info of localizationInfos) {
                let position = { lat: info.lat, lng: info.lng };
                let marker = new google.maps.Marker({
                    position: position,
                    map: map,
                    label: info.name
                });
            }
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBNjplVWTZSwn6LkuX_DKNdMzfgbxPZjIA&callback=initMap">
</script>

